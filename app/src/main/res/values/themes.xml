<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZuriChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color</item>
        <item name="colorOnPrimary">@color/primary_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/secondary_text_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color</item>
        <!--<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">@color/navigation_bar_color</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ZuriChat.Settings" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>

    <style name="MessageItem" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">22sp</item>
        <item name="android:textColor">@color/message_content</item>
    </style>
    <style name="MessageItem.Time">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">12sp</item>
        <item name="android:textColor">@color/message_sent_time</item>
    </style>
    <style name="MessageItem.Checkmark">
        <item name="tint">@color/message_checkmark_unread</item>
        <item name="android:layout_height">7sp</item>
        <item name="android:layout_width">12sp</item>
    </style>

    <style name="TabTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabTextColor">@android:color/darker_gray</item>
        <item name="tabTextAppearance">@style/TabCustomTextAppearance</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
    </style>

    <style name="TabCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.ZuriChat.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1A61DB</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FFFFFF</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="l">#FFFFFF</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>
</resources>