<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

        <ImageView
            android:id="@+id/img_select_member"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dmuser" />

        <TextView
            android:id="@+id/txt_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:text="Peculiar Umeh"
            android:textColor="@color/chat_name_txt"
            app:layout_constraintBottom_toBottomOf="@+id/img_select_member"
            app:layout_constraintStart_toEndOf="@+id/img_select_member"
            app:layout_constraintTop_toTopOf="@+id/img_select_member" />

        <TextView
            android:id="@+id/txt_member_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="God is good."
            android:paddingEnd="8dp"
            android:textColor="@color/chat_txt"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_member_name"
            app:layout_constraintStart_toStartOf="@+id/txt_member_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_member_name" />

</androidx.constraintlayout.widget.ConstraintLayout>